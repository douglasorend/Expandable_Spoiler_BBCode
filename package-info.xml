<?xml version="1.0"?>
<!DOCTYPE package-info SYSTEM "http://www.simplemachines.org/xml/package-info">

<package-info xmlns="http://www.simplemachines.org/xml/package-info" xmlns:smf="http://www.simplemachines.org/">
	<id>Dougiefresh:Spoiler</id>
	<name>Expanding & Collapsing Spoiler Tag</name>
	<type>modification</type>
	<version>1.9</version>

	<install for="2.0 - 2.0.99">
		<readme parsebbc="true">readme.txt</readme>
		<code>add_remove_hooks.php</code>
		<modification type="file">language_english.xml</modification>
		<modification type="file">language_swedish-utf8.xml</modification>
		<modification type="file">language_norwegian-utf8.xml</modification>
		<require-file name="Subs-BBCode-Spoiler.php" destination="$sourcedir" />
		<require-file name="spoiler.gif" destination="$imagesdir/bbc" />
	</install>
	<uninstall for="2.0 - 2.0.99">
		<code>add_remove_hooks.php</code>
		<modification type="file" reverse="true">language_english.xml</modification>
		<modification type="file" reverse="true">language_swedish-utf8.xml</modification>
		<modification type="file" reverse="true">language_norwegian-utf8.xml</modification>
		<remove-file name="$sourcedir/Subs-BBCode-Spoiler.php" />		
		<remove-file name="$imagesdir/bbc/spoiler.gif" />
	</uninstall>

	<install for="2.1 Beta 1 - 2.1.99">
		<readme parsebbc="true">readme.txt</readme>
		<code>add_remove_hooks.php</code>
		<modification type="file">language_english.xml</modification>
		<modification type="file">language_swedish-utf8.xml</modification>
		<modification type="file">language_norwegian-utf8.xml</modification>
		<require-file name="Subs-BBCode-Spoiler.php" destination="$sourcedir" />
		<require-file name="spoiler.png" destination="$imagesdir/bbc" />
	</install>
	<uninstall for="2.1 Beta 1 - 2.1.99">
		<code>add_remove_hooks.php</code>
		<modification type="file" reverse="true">language_english.xml</modification>
		<modification type="file" reverse="true">language_swedish-utf8.xml</modification>
		<modification type="file" reverse="true">language_norwegian-utf8.xml</modification>
		<remove-file name="$sourcedir/Subs-BBCode-Spoiler.php" />		
		<remove-file name="$imagesdir/bbc/spoiler.png" />
	</uninstall>
</package-info>